package Enteties;

import java.util.ArrayList;

import Items.Item;
import Items.Potion;
import Items.Weapon;

public class Player extends Entity{
	
	private ArrayList<Item> inventory;
	private int maxInventory;

	public Player(int health, int attackDamage, String name) {
		super(health, attackDamage, name);
		this.maxInventory = 10;
		
	}

	public boolean pickupItem(Item item) {
		if(item instanceof Weapon && this.weapon == null){
			this.weapon = (Weapon) item;
			return true;
		}
		else if(item instanceof Potion && this.potion == null){
			this.potion = (Potion) item;
			return true;
		}
		else{
			if (inventory.size() < maxInventory){
				inventory.add(item);
				return true;
			}
			return false;
		}
	}

	public Potion getPotion() {
		return this.potion;
	}

	public boolean hasPotion() {
		if(this.potion != null){
			return true;
		}
		return false;
	}

	public boolean missingHealth() {
		if(this.health < this.maxHealth){
			return true;
		}
		return false;
	}

	public void drink() {
		this.potion.drink(this);
		if(this.potion.empty()){
			this.potion = null;
		}
		
	}
	
	

}
