package HomeExam;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class UserInput {
	static BufferedReader bufferedReader = new BufferedReader(new InputStreamReader(System.in));

	public static String userInput() throws Exception {
		return bufferedReader.readLine();
	}
	
	public static void awaitAction(){
		String choice = bufferedReader.readLine();
		switch(choice){
		case "w":
			if(The_Game.activeRoom.getRoom(0) != null && The_Game.activeRoom.getLock(0) == 0)The_Game.move(this.roomToTheWest);
			break;
		case "n":
			if(this.roomToTheNorth != null && this.lockNorth == 0)The_Game.move(this.roomToTheNorth);
			break;
		case "e":
			if(this.roomToTheEast != null && this.lockEast == 0)The_Game.move(this.roomToTheEast);
			break;
		case "s":
			if(this.roomToTheSouth != null && this.lockSouth == 0)The_Game.move(this.roomToTheSouth);
			break;
		case "p":
			if(this.item != null){
				if(The_Game.pickUpItem(this.item)){
					this.item = null;
				}
			}
			The_Game.move(this);
			break;
		default:
			The_Game.failedAction = true;
			The_Game.move(this);
			break;
		}
	}

}
